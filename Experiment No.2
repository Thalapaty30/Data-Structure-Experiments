#include <iostream>
using namespace std;

int main() {
    int a[3][3] = {
        {1, 2, 3},
        {4, 5, 6},
        {7, 8, 9}
    };

    int i, j, choice;
    int sum = 0, sub;

    cout << "Matrix Operations\n";
    cout << "1. Display Matrix\n";
    cout << "2. Addition (Sum of elements)\n";
    cout << "3. Subtraction of elements\n";
    cout << "4. Transpose of matrix\n";
    cout << "Enter your choice: ";
    cin >> choice;

    switch(choice) {

        case 1:   // Display
            cout << "Matrix is:\n";
            for(i=0;i<3;i++) {
                for(j=0;j<3;j++)
                    cout << a[i][j] << " ";
                cout << endl;
            }
            break;

        case 2:   // Addition
            for(i=0;i<3;i++)
                for(j=0;j<3;j++)
                    sum += a[i][j];

            cout << "Addition (Sum) = " << sum;
            break;

        case 3:   // Subtraction
            sub = a[0][0];
            for(i=0;i<3;i++)
                for(j=0;j<3;j++) {
                    if(i==0 && j==0)
                        continue;
                    sub -= a[i][j];
                }

            cout << "Subtraction result = " << sub;
            break;

        case 4:   // Transpose
            cout << "Transpose of matrix:\n";
            for(j=0;j<3;j++) {
                for(i=0;i<3;i++)
                    cout << a[i][j] << " ";
                cout << endl;
            }
            break;

        default:
            cout << "Invalid choice";
    }

    return 0;
}
